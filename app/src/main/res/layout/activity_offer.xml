<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text = "Logout"
            android:id = "@+id/logout"
            android:background = "@drawable/button_round"
            android:textColor="#ffffff"
            android:layout_marginTop = "10dp"
            android:layout_marginRight="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Offer"
        android:fontFamily="@font/abel"
        android:textStyle="bold"
        android:textSize="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/productname_textbox_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="top|left"
        android:padding="10dp"
        android:hint="Product Name/Type"
        android:inputType="text"
        android:importantForAutofill="no"
        android:textColorHint="#ffffff"
        android:background="@drawable/text_field"
        android:paddingHorizontal="10dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/quantity_textbox_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="top|left"
        android:padding="10dp"
        android:hint="Quantity"
        android:textColorHint="#ffffff"
        android:inputType="text"
        android:importantForAutofill="no"
        android:background="@drawable/text_field"
        android:paddingHorizontal="10dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/productname_textbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/details_textbox_off"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="top|left"
        android:padding="10dp"
        android:hint="Extra Details"
        android:inputType="text"
        android:importantForAutofill="no"
        android:textColorHint="#ffffff"
        android:background="@drawable/text_field"
        android:paddingHorizontal="10dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/quantity_textbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/create_off_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_round"
        android:text = "Create Offer"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/details_textbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/offer"
    />

</androidx.constraintlayout.widget.ConstraintLayout>