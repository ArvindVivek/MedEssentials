<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout_off"
            android:background="@drawable/button_round"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Show Requests"
            android:id = "@+id/show_request_button"
            android:background = "@drawable/button_round"
            android:textColor = "#ffffff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/title_off"
            app:layout_constraintRight_toLeftOf="@id/logout_off"
            android:layout_marginTop="16dp"
            />

    <TextView
            android:id="@+id/title_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer"
            android:fontFamily="@font/abel"
            android:textStyle="bold"
            android:textSize="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>



    <ScrollView android:layout_width="match_parent"
                android:layout_height = "wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_off"
                android:id = "@+id/scrollview"
    >

        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText
                    android:id="@+id/company_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Company Name"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />

            <Spinner
                    android:id="@+id/productname_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top|left"
                    android:padding="10dp"/>


            <EditText
                    android:id="@+id/product_type_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Type if applicable (if not, please put N/A"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />

            <EditText
                    android:id="@+id/quantity_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Quantity"
                    android:textColorHint="#ffffff"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />


            <EditText
                    android:id="@+id/details_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Description"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />

            <EditText
                    android:id="@+id/email_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />

            <EditText
                    android:id="@+id/latitude_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Latitude"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />

            <EditText
                    android:id="@+id/longitude_textbox_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:hint="Longitude"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/text_field"
                    android:textColor="#ffffff"
            />


            <Button
                    android:id="@+id/offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_round"
                    android:text = "Create Offer"
                    android:textColor="#ffffff"

            />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>